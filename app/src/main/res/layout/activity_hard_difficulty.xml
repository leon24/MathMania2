<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ViewModel"
            type="newton.mathmania.models.ViewModel" />
    </data>


<android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newton.mathmania.HardDifficultyActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/hardDifficultyLogotype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mathmanialogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/mathmania_logotype" />

    <TextView
        android:id="@+id/Question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/border_settings"
        android:text="@{ViewModel.test}"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/hardDifficultyLogotype" />

    <Button
        android:id="@+id/hButton1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/hButton4"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/hButton2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/hButton1"
        app:layout_constraintRight_toLeftOf="@+id/hButton3"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/hButton5" />

    <Button
        android:id="@+id/hButton3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/hButton6"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/hButton4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/hButton5"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/hButton4"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/hButton6"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/hButton6"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

</layout>